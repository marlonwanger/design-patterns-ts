{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Debug TS Node Dev",
          "skipFiles": [
              "<node_internals>/**"
          ],
          "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node-dev",
          "args": [
              "--respawn",
              "--transpile-only",
              "${workspaceFolder}/src/index.ts"
          ],
          "sourceMaps": true
      }
  ]
}